<ol class="breadcrumb">
    <li class="active"><a href="/">Home</a></li>
    <li>Majors</li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage Majors</h2>
<button class="btn btn-success" data-model="major" id="addModelButton">Add Major</button>
<table class="table table-striped table-bordered" id="modelTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major</th>
      <th>SAT</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof modelData != "undefined" && modelData.length > 0){ %>
    <% modelData.forEach(function(modelRec){ %>
      <tr>
        <td><%= modelRec.major_id %></td>
        <td><%= modelRec.major %></td>
          <td><%= modelRec.sat %></td>
        <td class="text-center" style="white-space: nowrap;">
          <button class="btn btn-primary" id="editButton" data-model="major" data-modelid="<%= modelRec.major_id %>">edit</button>&nbsp<button class="btn btn-danger" id="deleteButton" data-model="major" data-modelid="<%= modelRec.major_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="major_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageModelForm">
  <input type="hidden" name="major_id">
  <div class="form-group">
    <label for="major" class="col-sm-2 control-label">Major Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major" name="major" placeholder="Major" required>
    </div>
  </div>
    <div class="form-group">
    <label for="sat" class="col-sm-2 control-label">SAT</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="sat" name="sat" placeholder="SAT">
    </div>
  </div>

  </div>
</form>
