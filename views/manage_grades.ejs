<ol class="breadcrumb">
    <li class="active"><a href="/">Home</a></li>
    <li class="active">Grades</li>
</ol>

<br/>

<%- partial ('partials/statusmessage.ejs') %>

<h2>Manage grades</h2>
<button class="btn btn-success" data-model="grade" id="addModelButton">Add grade</button>
<table class="table table-striped table-bordered" id="modelTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Grade</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof modelData != "undefined" && modelData.length > 0){ %>
    <% modelData.forEach(function(modelRec){ %>
      <tr>
        <td><%= modelRec.grade_id %></td>
        <td><%= modelRec.grade %></td>
        <td class="text-center" style="white-space: nowrap;">
          <button class="btn btn-primary" id="editButton" data-model="grade" data-modelid="<%= modelRec.grade_id %>">edit</button>&nbsp<button class="btn btn-danger" id="deleteButton" data-model="grade" data-modelid="<%= modelRec.grade_id %>">delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_grade" method="POST" style="display: none;" id="deleteform">
  <input type="hidden" name="grade_id" value="eric">
</form>

<form style="display: none;" action="" method="POST" class="form-horizontal" id="manageModelForm">
  <input type="hidden" name="grade_id">
  <div class="form-group">
    <label for="grade" class="col-sm-2 control-label">Grade Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="grade" name="grade" placeholder="Grade" required>
    </div>
  </div>

  </div>
</form>
